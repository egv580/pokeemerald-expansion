raw `
.set LOCALID_CLYDE, 8
.set LOCALID_DUKE, 30

EverGrandeCity_MapScripts::
	map_script MAP_SCRIPT_ON_TRANSITION, EverGrandeCity_OnTransition
	.byte 0

EverGrandeCity_OnTransition:
	call_if_set FLAG_SYS_WEATHER_CTRL, Common_EventScript_SetAbnormalWeather
	end

EverGrandeCity_EventScript_VictoryRoadSign::
	msgbox EverGrandeCity_Text_EnteringVictoryRoad, MSGBOX_SIGN
	end

EverGrandeCity_EventScript_CitySign::
	msgbox EverGrandeCity_Text_CitySign, MSGBOX_SIGN
	end

EverGrandeCity_EventScript_PokemonLeagueSign::
	msgbox EverGrandeCity_Text_EnteringPokemonLeague, MSGBOX_SIGN
	end

EverGrandeCity_EventScript_SetVisitedEverGrande::
	setflag FLAG_VISITED_EVER_GRANDE_CITY
	setvar VAR_TEMP_1, 1
	end

EverGrandeCity_Text_EnteringVictoryRoad:
	.string "ENTERING VICTORY ROAD$"

EverGrandeCity_Text_EnteringPokemonLeague:
	.string "ENTERING POKéMON LEAGUE\n"
	.string "CENTER GATE$"

EverGrandeCity_Text_CitySign:
	.string "EVER GRANDE CITY\p"
	.string "“The paradise of flowers, the sea,\n"
	.string "and POKéMON.”$"

EverGrandeCity_BerryLadyText:
	.string "I'm a ROYAL GARDENER.\p"
	.string "These berries are becoming endangered\n" 
    .string "on the mainland due to harsh industrial\n"
    .string "practices.\p"
	.string "But the climate here is just right\n"
    .string "for them to thrive!$"

`

script EverGrandeCity_Read_ParkSign {
    lockall
    msgbox(EverGrandeCity_ParkSign, type=MSGBOX_SIGN)
    releaseall
}

script EverGrandeCity_Read_HouseSign {
    lockall
    msgbox(EverGrandeCity_HouseSign, type=MSGBOX_SIGN)
    releaseall
}

script EverGrandeCity_Make_Devon_Wait {
    lockall
    msgbox(EverGrandeCity_Make_Devon_Wait_Text, type=MSGBOX_YESNO)
    if(var(VAR_RESULT) == YES){
        msgbox("Ok, I'll wait for you.", type=MSGBOX_NPC)
        destroyfollower
    }
    else{
		msgbox("Ok, let's keep going.", type=MSGBOX_NPC)
    }
    releaseall
}

text EverGrandeCity_Make_Devon_Wait_Text {
    format("Should I wait for you here?")
}

text EverGrandeCity_ParkSign {
    format("PALACE GARDENS")
}

text EverGrandeCity_HouseSign {
    format("To Devon's Cave")
}


script EverGrandeCity_TalkTo_ParkGirl {
    lockall
    faceplayer
    msgbox(EverGrandeCity_ParkGirl_1, type=MSGBOX_YESNO)
    if(var(VAR_RESULT) == YES){
        msgbox(EverGrandeCity_ParkGirl_Yes, type=MSGBOX_NPC)
    }
    else{
		msgbox(EverGrandeCity_ParkGirl_No, type=MSGBOX_NPC)
    }
    releaseall
}

script EverGrandeCity_Script_Zigzagoon {
    lockall
    faceplayer
    playmoncry(SPECIES_ZIGZAGOON, CRY_MODE_NORMAL)
    msgbox(EverGrandeCity_Zigzagoon, type=MSGBOX_NPC)
	waitmoncry
	closemessage
    releaseall
}

script EverGrandeCity_Script_Wingull {
    lockall
    playmoncry(SPECIES_WINGULL, CRY_MODE_NORMAL)
    msgbox(EverGrandeCity_Wingull, type=MSGBOX_NPC)
    waitmoncry
    closemessage
    releaseall
}

