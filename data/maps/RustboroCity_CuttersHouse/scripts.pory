	msgbox(RustboroCity_DevonsHouse_Text_StoneEmerald, MSGBOX_SIGN)
	applymovement(1, Movement_DevonsHouse_Emerald)
	msgbox(RustboroCity_DevonsHouse_Text_DevonsEmerald1, MSGBOX_SIGN)
