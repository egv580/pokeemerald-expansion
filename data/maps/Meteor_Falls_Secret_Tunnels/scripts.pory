text MeteorFalls_SecretTunnels_DevonOhNo {
	format("DEVON: Oh no!")
}

text MeteorFalls_SecretTunnels_GoldenRepelFadeText {
	format("The effects of the Golden Repel faded.\p"
	"It was just a concentrated Max Repel!"
	)
}

text MeteorFalls_1F_1R_DevonPostBattle1 {
	format("DEVON: Oh no, BELDUM!\p")
}

text MeteorFalls_1F_1R_DevonPostBattle2 {
	format("… … … … …\p"
	"I don't have any more healing supplies...\n"
	"If we run into another wild POKeMON, BELDUM will get even more hurt."
	"I don't know how I can go on..."
	)
}

text MeteorFalls_1F_1R_GiveDevonPotions {
	format("Give DEVON some Potions?")
}

movement Movement_DevonBackAndForth {
	walk_in_place_left
	walk_in_place_right
	faceplayer
}