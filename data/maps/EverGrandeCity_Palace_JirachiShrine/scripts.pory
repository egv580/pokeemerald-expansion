script EverGrandeCity_Palace_JirachiShrine_Script_WoodenSign {
    lockall
    msgbox(Text_EverGrandeCity_Palace_JirachiShrine_WoodenSign)
    releaseall
}

script EverGrandeCity_Palace_JirachiShrine_Script_TalkToJirachi {
    lockall
    switch (var(VAR_EVERGRANDE_INTRO_STATE)) {
        case 7:
            playmoncry(SPECIES_JIRACHI, CRY_MODE_NORMAL)
            msgbox("JIRACHI has come to visit.\pCast a wish?", MSGBOX_YESNO)
            waitmoncry
            if (var(VAR_RESULT) == YES) {
                playse(SE_M_COSMIC_POWER)
                msgbox(Text_EverGrandeCity_Palace_JirachiShrine_Jirachi_MakeAWish, MSGBOX_DEFAULT)
                waitse
                setvar(VAR_EVERGRANDE_INTRO_STATE, 8)
            }
        default:
            playmoncry(SPECIES_JIRACHI, CRY_MODE_NORMAL)
            msgbox(Text_EverGrandeCity_Palace_JirachiShrine_Jirachi, MSGBOX_NPC)
            waitmoncry
    }
    releaseall
}

